rso:ESRSEnvironmentTopic rdf:type owl:Class ;
                         rdfs:subClassOf rso:ESRSTopic ;
                         rdfs:comment "ESRS topics derived from the ESRS standards describing the environmental dimension."@en ;
                         rdfs:label "ESRS Environment Topic"@en ;
